{% extends "Tom32iSiteBundle::layout.html.twig" %}

{% block content %}

	{% if open %}
		<h3>{{ done }} secrets déjà enregistrés !</h3>

		<div class="progress progress-danger progress-striped">
			<div class="bar" style="width: {{ done / total }}%"></div>
		</div>

		<p>Vous avez jusqu'au 30 décembre inclus pour envoyer vos secret.</p>

	{% else %}
		<ul id="secrets" class="unstyled">
			{% for secret in secrets %}
				<li>
					<p class="secret">{{ secret.content }}</p>
				</li>
			{% endfor %}
		</ul>
	{% endif %}

{% endblock %}